<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator using JavaScript</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    
<div class="container">
    
    <div class="calculator">
        <div class="title">
            <h3>Shahin Computer System</h3>
            <small>Dewkhola Bazer</small>
            <small>+880 168 306 1686</small>
        </div>
        <form>
            
            <div class="display">
                <input type="text" name="display">
            </div>
            <div>
                <input type="button" value="AC" onclick="audio.play(),display.value = ''" class="operator">
                <input type="button" value="DE" onclick="audio.play(),display.value = display.value.toString().slice(0,-1) " class="operator">
                <input type="button" value="." onclick="audio.play(),display.value += '.'" class="operator">
                <input type="button" value="/" onclick="audio.play(),display.value += '/'" class="operator">
            </div>
            <div>
                <input type="button" value="7" onclick="audio.play(),display.value += '7'">
                <input type="button" value="8" onclick="audio.play(),display.value += '8'">
                <input type="button" value="9" onclick="audio.play(),display.value += '9'">
                <input type="button" value="*" onclick="audio.play(),display.value += '*'" class="operator">
            </div>
            <div>
                <input type="button" value="4" onclick="audio.play(),display.value += '4'">
                <input type="button" value="5" onclick="audio.play(),display.value += '5'">
                <input type="button" value="6" onclick="audio.play(),display.value += '6'">
                <input type="button" value="-" onclick="audio.play(),display.value += '-'" class="operator">
            </div>
            <div>
                <input type="button" value="1" onclick="audio.play(),display.value += '1'">
                <input type="button" value="2" onclick="audio.play(),display.value += '2'">
                <input type="button" value="3" onclick= "audio.play(), display.value += '3'">
                <input type="button" value="+" onclick="audio.play(),display.value += '+'" class="operator">
            </div>
            <div>
                <input type="button" value="00" onclick="audio.play(), display.value += '00'">
                <input type="button" value="0" onclick="audio.play(), display.value += '0'">
                <input type="button" value="=" onclick="audio.play(),display.value = eval(display.value) " class="equal operator"  >
            </div>
            
        </form>
    </div>
</div>

<script>
    const audio = new Audio()
    audio.src = './click_sound.wav'
</script>
</body>
</html>